using System.Web.Mvc;
using Abp.Web.Mvc.Authorization;
using Abp.Web.Mvc.Extensions;
using Enterprises.CMS.Role;
using Enterprises.CMS.Role.Dto;
using Enterprises.CMS.UserList;
using Enterprises.CMS.UserList.Dto;


namespace Enterprises.CMS.Web.Areas.Admin.Controllers
{
    [AbpMvcAuthorize]
    public class RoleController :  CmsAdminControllerBase
    {
        private readonly IRoleAppService _roleAppService;

        public RoleController(IRoleAppService roleAppService)
        {
            _roleAppService = roleAppService;
        }


        /// <summary>
        /// 列表
        /// </summary>
        /// <returns></returns>
        [AbpMvcAuthorize("Administration.Role")]
        public ActionResult Index(int id = 1)
        {
            RoleSearchInput model = new RoleSearchInput();
            model.PageIndex = id;
            return View(model);
        }

        [AbpMvcAuthorize("Administration.Role")]
        [HttpGet]
        public ActionResult List(int id = 1)
        {
            var list = _roleAppService.List(new UsersSearchInput(), id);
            return PartialView("_PageTable", list);
        }

        [AbpMvcAuthorize("Administration.Role")]
        [HttpPost]
        public ActionResult List(UsersSearchInput searchModel, int id = 1)
        {
            var list = _roleAppService.List(searchModel, id);
            return PartialView("_PageTable", list);
        }
    }
}