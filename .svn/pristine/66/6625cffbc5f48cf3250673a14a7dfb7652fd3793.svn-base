@model Enterprises.CMS.NewsType.Dto.NewsTypeCreateInput

<div class="modal-header">
    <button data-dismiss="modal" class="close" type="button">×</button>
    <h3>修改记录</h3>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Edit", "NewsType", FormMethod.Post, new { @class = "form-horizontal", id = "saveForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(p=>p.Id)
         <div class="control-group">
            <label class="control-label">新闻类型 :</label>
            <div class="controls">
                @Html.TextBoxFor(p => p.TypeName, new {@class = "span3", placeholder = "新闻类型"})
                <span class="help-inline">@Html.ValidationMessageFor(p => p.TypeName)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">新闻编号 :</label>
            <div class="controls">
                @Html.TextBoxFor(p => p.TypeCode, new {@class = "span3", placeholder = "新闻编号"})
                <span class="help-inline">@Html.ValidationMessageFor(p => p.TypeCode)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">在菜单显示 :</label>
            <div class="controls">
                @Html.TextBoxFor(p => p.ShowMenu, new {@class = "span3", placeholder = "在菜单显示"})
                <span class="help-inline">@Html.ValidationMessageFor(p => p.ShowMenu)</span>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label">排序顺序 :</label>
            <div class="controls">
                @Html.TextBoxFor(p => p.SortOrder, new {@class = "span3", placeholder = "排序顺序"})
                <span class="help-inline">@Html.ValidationMessageFor(p => p.SortOrder)</span>
            </div>
        </div>
    }
</div>
<div class="modal-footer">
    <a id="btSave" class="btn btn-primary" href="#">确定</a>
    <a data-dismiss="modal" class="btn btn-inverse" href="#">取消</a>
</div>

