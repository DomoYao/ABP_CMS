<div id="createModal" class="modal hide">
    <div class="modal-header">
        <button data-dismiss="modal" class="close" type="button">×</button>
        <h3>新增</h3>
    </div>
    <div class="modal-body">
        <form action="Users/Create" id="createForm" method="post" class="form-horizontal">
            <div class="control-group">
                <label class="control-label">用户名 :</label>
                <div class="controls">
                    <input type="text" name="UserName" class="span3" placeholder="First name" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">姓名 :</label>
                <div class="controls">
                    <input type="text" name="Name" class="span3" placeholder="Last name" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">邮箱 :</label>
                <div class="controls">
                    <input type="password" name="EmailAddress" class="span3" placeholder="Enter Password" />
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a id="createSave" class="btn btn-primary" href="#">确定</a>
        <a data-dismiss="modal" class="btn btn-inverse" href="#">取消</a>
    </div>
</div>
