@using Enterprises.CMS.Web.Areas.Admin.Views
@model Enterprises.CMS.Web.Areas.Admin.Models.LeftMenuViewModel
@{
    var calculateMenuUrl = new Func<string, string>((url) =>
    {
        if (string.IsNullOrEmpty(url))
        {
            return ApplicationPath;
        }

        if (UrlChecker.IsRooted(url))
        {
            return url;
        }

        return ApplicationPath + url;
    });
}
<div id="sidebar">
    <ul>
        @foreach (var menuItem in Model.MainMenu.Items)
        {
            <li class="@(Model.ActiveMenuItemName == menuItem.Name ? "active" : "")"><a href="@calculateMenuUrl(menuItem.Url)"><i class="icon @menuItem.Icon"></i> <span>@menuItem.DisplayName</span></a></li>
        }

